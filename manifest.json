{
  "manifest_version": 2,
  "name": "Chicago Bus Monitor (CTA)",
  "short_name": "ChicagoBusMonitor",
  "version": "1.0",
  "description": "Track when the next CTA bus will be arriving to a specified stop so you can leave at the last possible moment!",
  "offline_enabled": false,
  
  "background": {
    "page": "background.html"
  },
  
  "permissions": [
    "storage",
    "background",
    "webRequest",
    "*://ctabustracker.com/",
    "*://ajax.googleapis.com/",
    "*://maxcdn.bootstrapcdn.com/"
   ],

  "browser_action": {
    "default_icon": "Bus.png",
    "default_popup": "popup.html"
  },

  "icons": {
      "128": "Bus.png"
  }
}